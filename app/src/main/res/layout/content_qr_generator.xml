<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_qr_generator"
        tools:context=".QrGeneratorActivity" tools:layout_editor_absoluteY="56dp">


    <TextView android:layout_width="match_parent"
              android:layout_height="50dp"
              android:id="@+id/updated_balance_by_payer"
              android:text="Scan To Pay"
              android:gravity="center"
              android:textSize="30dp"
              android:layout_marginTop="150dp"
    />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qr_code_image"
            android:layout_below="@+id/updated_balance_by_payer"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
    />


</android.widget.RelativeLayout>