<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:showIn="@layout/activity_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScrollingActivity">


    <TextView
            android:id="@+id/home_account_balance"
            android:layout_width="271dp"
            android:layout_height="57dp"
            android:textSize="30dp"
            android:text="100 EUR"
            android:layout_marginLeft="10dp"
    />

    <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/home_request_money"
            android:text="REQUEST"
            android:layout_below="@+id/home_account_balance"
    />

    <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/home_pay_money"
            android:text="PAY"
            android:layout_below="@+id/home_request_money"
    />

</android.widget.RelativeLayout>